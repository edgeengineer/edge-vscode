{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "appId": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "entitlements": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["network", "video"],
                        "description": "The type of entitlement.",
                        "$comment": "The `type` property is always required. It's added explicitly another time to help with autocompletion."
                    }
                },
                "required": ["type"],
                "oneOf": [
                    {
                        "type": "object",
                        "required": ["type", "mode"],
                        "description": "Define access to the network.",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": ["network"]
                            },
                            "mode": {
                                "type": "string",
                                "enum": ["host", "none"],
                                "description": "Network mode - 'host' allows network access, 'none' disables all network access"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": ["type"],
                        "description": "Define access to camera devices.",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": ["video"]
                            }
                        }
                    }
                ]
            }
        }
    },
    "required": ["appId", "version", "entitlements"],
}